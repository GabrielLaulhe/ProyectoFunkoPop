<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="stylesheet" href="/css/index.css">
</head>

<body>

    <%- include('../partials/headerAdmin') %>


    <main class="admin container">
        <section class="admin__search">
            <iconify-icon class="admin__icon" icon="iconamoon:search"></iconify-icon>
            <input class="admin__search-bar" type="search" placeholder="codigo, nombre o categoria">
        </section>

        <section class="admin__list">
            <div class="admin__header">
                <h2 class="admin__title">LISTADO DE PRODUCTOS</h2>
                <span>
                    <p>AGREGAR</p><iconify-icon class="admin__icon-plus" icon="bxs:plus-square"
                        style="color: #f33;"></iconify-icon>
                </span>
            </div>
        </section>

        <div class="admin__table">
            <div class="admin__table-header">
                <h3>ID</h3>
                <h3>Codigo</h3>
                <h3>Nombre del Producto</h3>
                <h3>Categoria</h3>
                <div></div>
                <div></div>
            </div>
            <% funko.forEach(item => { %> 
            <article class="admin__table-row">
                <p><%=item.product_id%></p>
                <p><%=item.product_sku%></p>
                <p><%=item.product_name%></p>
                <p><%=item.licence_name%></p>
                <a href="/admin/edit/<%= item.product_id%>"><iconify-icon icon="mdi:pencil" style="color: #1d84b5;"></iconify-icon></a>
                <a type="submit"><iconify-icon icon="heroicons-solid:trash" style="color: #f33;"></iconify-icon></a>
            </article>
            <% }) %>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/iconify-icon@1.0.8/dist/iconify-icon.min.js"></script>
</body>

</html>